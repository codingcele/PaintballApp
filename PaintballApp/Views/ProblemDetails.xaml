<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PaintballApp.Views.ProblemDetails"
             Title="ProblemDetails">
    <StackLayout Margin="10" Spacing="15">
        <VerticalStackLayout>
            <Label Text="Titolo:"/>
            <Label Text="{Binding ProblemDetail.Title}" />
        </VerticalStackLayout>

        <VerticalStackLayout>
            <Label Text="Descrizione:"/>
            <Label Text="{Binding ProblemDetail.Description}" />
        </VerticalStackLayout>

        <VerticalStackLayout>
            <Label Text="Possibile soluzione:"/>
            <Label Text="{Binding ProblemDetail.PossibleSolution}" />
        </VerticalStackLayout>
    </StackLayout>
</ContentPage>